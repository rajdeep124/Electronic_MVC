@model Electronic_MVC.Models.Brand_Detail

@{
    ViewData["Title"] = "Create";
}

<!--code to show the create page of the table-->
<h1>Create</h1>

<h4>Brand Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand_Name" class="control-label">Brand Name</label>
                <input asp-for="Brand_Name" class="form-control" />
                <span asp-validation-for="Brand_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand_Branch_Location" class="control-label">Brand Branch Location</label>
                <input asp-for="Brand_Branch_Location" class="form-control" />
                <span asp-validation-for="Brand_Branch_Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand_Email" class="control-label">Brand Email</label>
                <input asp-for="Brand_Email" class="form-control" />
                <span asp-validation-for="Brand_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
