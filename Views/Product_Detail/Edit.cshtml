@model Electronic_MVC.Models.Product_Detail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Product_Name" class="control-label">Product Name</label>
                <input asp-for="Product_Name" class="form-control" />
                <span asp-validation-for="Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand_DetailId" class="control-label">Brand Detail</label>
                <select asp-for="Brand_DetailId" class="form-control" asp-items="ViewBag.Brand_DetailId"></select>
                <span asp-validation-for="Brand_DetailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category_DetailId" class="control-label">Category Detail</label>
                <select asp-for="Category_DetailId" class="form-control" asp-items="ViewBag.Category_DetailId"></select>
                <span asp-validation-for="Category_DetailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
