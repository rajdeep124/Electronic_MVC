@model Electronic_MVC.Models.Order_Detail

@{
    ViewData["Title"] = "Details";
}
<!--code of the detail page table-->
<h1>Details</h1>

<div>
    <h4>Order Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Discount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">
            Customer Detail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer_Detail.Customer_Name)
        </dd>
        <dt class="col-sm-2">
            Product Detail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Product_Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
